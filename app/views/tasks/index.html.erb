<div class="container mt-4">
  <h1>Tasks</h1>
  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Points</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.title, task, class: 'text-decoration-none' %></td>
          <td><%= task.points %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
