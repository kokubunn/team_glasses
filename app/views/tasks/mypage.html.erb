<h2>My Page</h2>
<%= column_chart(@user_data) %>
<h6>実行タスク履歴</h6>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Points</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= link_to task.title, task, class: 'text-decoration-none' %></td>
                <td><%= task.points %></td>
                <td><%= link_to 'PointGet!', getpoint_path(task_id: task.id), data: {turbo_method: :post}, class: 'btn btn-info' %></td>
                <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary' %></td>
                <td><%= link_to 'Destroy', task, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
    </tbody>
</table>
